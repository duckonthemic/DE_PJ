# ============================================
# Environment Variables Template
# Copy this file to .env and update values
# ============================================

# ===================
# Application
# ===================
APP_NAME=Enterprise Analytics Platform
APP_VERSION=0.1.0
DEBUG=false

# ===================
# Source Database (OLTP - E-commerce)
# ===================
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=ecommerce_source
SOURCE_DB_USER=postgres
SOURCE_DB_PASSWORD=your_password_here

# ===================
# Data Warehouse Database
# ===================
DW_DB_HOST=localhost
DW_DB_PORT=5433
DW_DB_NAME=data_warehouse
DW_DB_USER=postgres
DW_DB_PASSWORD=your_password_here

# ===================
# MinIO / S3 Configuration
# ===================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secret_key_here
MINIO_BUCKET_RAW=raw
MINIO_BUCKET_STAGING=staging
MINIO_BUCKET_PROCESSED=processed

# ===================
# Airflow
# ===================
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5434/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here

# ===================
# Metabase
# ===================
MB_DB_TYPE=postgres
MB_DB_HOST=localhost
MB_DB_PORT=5432
MB_DB_DBNAME=metabase
MB_DB_USER=metabase
MB_DB_PASS=your_password_here

# ===================
# Great Expectations
# ===================
GE_HOME=./great_expectations

# ===================
# dbt
# ===================
DBT_PROFILES_DIR=./dbt
